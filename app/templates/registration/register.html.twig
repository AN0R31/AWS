{% extends 'base.html.twig' %}

{% block title %}Register to AnonForums!{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/styles/auth.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <p class="tip"></p>
    <div class="cont">
        <div class="form sign-in">
            <h2>Welcome back,</h2>
            <label>
                {{ form_row(registrationForm.email) }}
            </label>
            <label>
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
            </label>
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="submit">Sign Up</button>
            {#            <button type="button" class="fb-btn">Connect with <span>facebook</span></button>#}
        </div>
        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">
                    <h2>One of us?</h2>
                    <p>If you already has an account, just sign in. We've missed you!</p>
                </div>
                <div class="img__text m--in">
                    <h2>One of us?</h2>
                    <p>If you already has an account, just sign in. We've missed you!</p>
                </div>
                <div class="img__btn" onclick="window.location.href = '/login'">
                    <span class="m--up">Sign In</span>
                </div>
            </div>
            <div class="form sign-up">
                <h2>Time to feel like home,</h2>
                <label>
                    <span>Name</span>
                    <input type="text" />
                </label>
                <label>
                    <span>Email</span>
                    <input type="email" />
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" />
                </label>
                <button type="button" class="submit">Sign Up</button>
                <button type="button" class="fb-btn">Join with <span>facebook</span></button>
            </div>
        </div>
    </div>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert" style="color: red">{{ flash_error }}</div>
    {% endfor %}
    {{ form_end(registrationForm) }}

    <a href="https://dribbble.com/shots/3306190-Login-Registration-form" target="_blank" class="icon-link">
        <img src="http://icons.iconarchive.com/icons/uiconstock/socialmedia/256/Dribbble-icon.png">
    </a>
    <a href="https://twitter.com/NikolayTalanov" target="_blank" class="icon-link icon-link--twitter">
        <img src="https://cdn1.iconfinder.com/data/icons/logotypes/32/twitter-128.png">
    </a>
{% endblock %}
