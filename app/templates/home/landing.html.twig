{% extends 'base.html.twig' %}

{% block title %}Join AnonForums!{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/styles/landing.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Start Landing Page -->
    <div class="landing-page">
        <header>
            <div class="container">
                <a href="#" class="logo">Welcome to <b>AnonForums</b> stranger!</a>
                <ul class="links">
                    <li onclick="window.location.href = '/'">Home</li>
                    <li onclick="window.location.href = '/topic/create'">New Topic</li>
                    <li onclick="window.location.href = '/feed'">Feed</li>
                    <li onclick="window.location.href = '/edit'">My data</li>
                    <li onclick="window.location.href = '/login'">Login</li>
                </ul>
            </div>
        </header>
        <div class="content">
            <div class="container">
                <div class="info">
                    <h1>Join AnonForums!</h1>
                    <p>It has never been safer to discuss different topics with strangers, <b>online</b> and most importantly <b>anonymously</b>! What are you waiting for? Get you account now!</p>
                    <button onclick="window.location.href = '/register'">Get Started!</button>
                </div>
                <div class="image">
                    <img src="https://i.postimg.cc/65QxYYzh/001234.png">
                </div>
            </div>
        </div>
    </div>
    <!-- End Landing Page -->
{% endblock %}
